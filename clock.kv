<Label>:
    markup: True
    halign: 'center'
<widget>:
<Button>:
    background_normal:''
    background_color:(0,0,0,0)
    font_size:24

<RoundedButton@Button>:
    canvas.before:
        Color:
            rgba:(1,0,0,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:[15]
<RoundedButton1@Button>:
    canvas.before:
        Color:
            rgba:(0,0,1,1)
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius:[15]
<TabbedPanelItem>
    color:"#e9eafc"
    font_size:18

<BtnBoxLayout@BoxLayout>:
    orientation:"horizontal"
    height:90
    padding:20
    spacing:20
    size_hint:(1,None)
<TextInput>:
    halign:"center"
    font_size:38
    multiline:False


TabbedPanel:
    alarm_time: time_input 
    do_default_tab: False
    background_image:"./bg.jpg"
    TabbedPanelItem:
        text:"Clock"
        
        BoxLayout:
            orientation:"vertical"
            
            Label:
                id:time
                font_size:18
                halign:'center'
    TabbedPanelItem:
        text:"stopwatch"

        BoxLayout:
            orientation:"vertical"

            Label:
                id:stopwatch
                font_size:60
            BtnBoxLayout:
                

                RoundedButton:
                    id:start_stop
                    text:"start"
                    on_press: app.start_stop()
                RoundedButton1:
                    id:reset
                    text:"reset"
                    on_press: app.reset()


    TabbedPanelItem:
        text:"Alarm"

        BoxLayout:
            orientation:"vertical"
            padding:20
            spacing:20

            Label:
                id: state
                text:'masukkan jam disini dengan format "HH:MM AM/PM"\n Contoh,[09:13 PM]'
                font_size:15

            TextInput:
                id:time_input


            BtnBoxLayout:
                RoundedButton:
                    text:"set alarm"
                    on_press:app.set_alarm(time_input.text)

    TabbedPanelItem:
        text: "Timer"
        
        BoxLayout:
            orientation: "vertical"
            padding: 20
            spacing:20
            
            Label:
                id: show
                text: 'masukkan waktu untuk timer dengan format"HH:MM:SS"\n contoh, :00:30'
                font_size: 15
                
            TextInput:
                id: text_input
                text: '00:00:00'
                            
            BtnBoxLayout:
                
                RoundedButton:
                    id: button
                    text: "Start"
                    on_press: app.toggle()
                    
                RoundedButton1:
                    text: "Pause"
                    on_press: app.pause()

    TabbedPanelItem:
        text:"Timer"